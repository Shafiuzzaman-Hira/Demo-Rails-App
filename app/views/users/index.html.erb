<h1>List of Users</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Link to Profile</th>
    </tr>
  </thead>
  <tbody>
  
    <% @users.each do |user| %>
      <tr>
        <td> <%=user.name%> </td>
        <td> <%=user.email%></td>
        <td>
            <%= link_to "<button class='btn btn-info'>View</button>".html_safe, user %>
        </td>
     </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "<button class='btn btn-primary'>Create New User</button>".html_safe, new_user_path %>