
<h1><%= @user.name %></h1>

<p><%= @user.email %></p>

<ul>
  <li><%= link_to "Edit", edit_user_path(@user) %></li>
  <li>
    <%= link_to "delete", @user, method: :delete,
                                  data: { confirm: "Are you sure?" } %>
  </li>
</ul>

<h2>Posts</h2>
<% @user.posts.each do |post| %>
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Message:</strong>
    <%= post.message %>
  </p>
<% end %>

<h2>Add a post:</h2>
<%= render 'posts/form' %>